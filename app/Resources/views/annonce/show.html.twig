{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

    <!-- Heading Row -->
    <div class="row">
        <div class="col-md-3">
            <img alt="" class="img-responsive" src="http://placehold.it/250x250&amp;text=Annonce">
        </div>
        <!-- /.col-md-9 -->
        <div class="col-md-6">
            <h1>{{ annonce.title }}</h1>
            <h2><small>{{ annonce.categorie.categorieName }}</small></h2>

        </div>

        <div class="col-md-3">
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('contact_utilisateur', {id: annonce.id}) }}">Contacter</a>

        </div>
    </div>
    <!-- /.row -->

    <hr>
    <div class="row">
        <div class="col-md-9">
            <div class="col-md-12">
                <h2>Description</h2>
                <p>{{ annonce.textAnnonce }}</p>
            </div>


            <ul>
                <li>
                    <a href="{{ path('annonce_index') }}">Retour a la liste</a>
                </li>
                {% if annonce.utilisateur.id is defined and app.user.id is defined and annonce.utilisateur.id == app.user.id%}
                <li>
                    <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">Modifier</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Suprimer" class="bg-primary">
                    {{ form_end(delete_form) }}
                </li>
                {% endif %}
            </ul>

        </div><!-- /.col-md-9 -->


        <div class="col-md-3">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Cat√©gories</h3>
                        </div>
                        <ul class="list-group">
                            {% for categorie in categories %}
                            <a href="#" class="list-group-item">{{ categorie.categorieName }}</a>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>














{% endblock %}
