                                        </a>

                                        <ul class="dropdown-menu dropdown-user">
                                            <li><a href="#"><i class="fa fa-user fa-fw"></i> Tableau de
                                                    bord</a>
                                            </li>
                                            <li><a href="#"><i class="fa fa-gear fa-fw"></i> Messages</a>
                                            </li>
                                            <li class="divider"></li>

                                            <li><a href="{{ path('utilisateur_logout') }}"><i
                                                            class="fa fa-sign-out fa-fw"></i> DÃ©connexion</a>
                                            </li>
                                        </ul>

                                        <!-- /.dropdown-user -->
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                    <!-- /.container -->
                </nav>
            {% endblock %}
        </div>

    </div>

    <div class="row">
        {% block body %}
        {% endblock %}
    </div>
    <br>
    <br>
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Myself 2017</p>
            </div>
        </div>
    </footer>

</div>


{% block javascripts %}

    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Star -->
    <script src="{{ asset('js/star/star.js') }}"></script>


