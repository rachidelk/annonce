                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="{{ path('homepage') }}">index</a>
                                </li>
                                <li>
                                    <a href="{{ path('annonce_index') }}">Annonce liste</a>
                                </li>
                                <li>
                                    <a href="{{ path('annonce_show',{id:1}) }}">Annonce</a>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right">

                                <li><a href="{{ path('utilisateur_connexion') }}">Connexion</a></li>
                                <li><a href="{{ path('utilisateur_new') }}">Inscription</a></li>
