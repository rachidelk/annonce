{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            {% if app.session.flashbag.has('confirm') %}
                <div class="alert alert-info">
                    {% for message in app.session.flashbag.get('confirm') %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}

            <form method="post" action="{{ path('contact_utilisateur', {id: annonce.id}) }}">
                <div class="form-group">

                    <input class="form-control"
                           name="nom"
                           type="text"
                           placeholder="Votre Nom">

                </div>
                <div class="form-group">

                    <input class="form-control"
                           name="email"
                           type="email"
                           placeholder="Votre e-mail">

                </div>
                <div class="form-group">

                <textarea class="form-control"
                          name="message"
                          placeholder="Votre message" rows="12"></textarea>

                </div>
                <button type="submit" name="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>

{% endblock %}





